# Application Configuration
APP_NAME=Carely AI - Healthcare Assistant
APP_VERSION=1.0.0
DEBUG=False

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# Database - Neon Serverless Postgres
# Use the POOLED connection string from Neon dashboard for application connections
# Format: postgresql://username:password@ep-xxxxx-pooler.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://username:password@ep-xxxxx-pooler.region.aws.neon.tech/carely?sslmode=require

# Optional: Unpooled connection for migrations/admin tasks
# DATABASE_URL_UNPOOLED=postgresql://username:password@ep-xxxxx.region.aws.neon.tech/carely?sslmode=require

# CORS - Add your frontend URLs
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# AI/ML Models - Add your API keys here
OPENAI_API_KEY=
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Healthcare specific
MAX_APPOINTMENT_DAYS_AHEAD=90
SUPPORT_EMAIL=support@carely-ai.com
